# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE=your_supabase_service_role_key

# CSRF Protection (required)
CSRF_SECRET=your_32_character_random_string

# AI Model API Keys
OPENAI_API_KEY=sk-your_openai_api_key
GOOGLE_GENERATIVE_AI_API_KEY=your_gemini_api_key
XAI_API_KEY=your_xai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# Encryption key for storing user API keys (32 bytes base64 encoded)
ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key

# Developer Tools (optional - required for web search and image search)
EXA_API_KEY=your_exa_api_key
GITHUB_TOKEN=your_github_token

# MCP (Model Context Protocol) Configuration (optional)
# Configure MCP servers as JSON array
# MCP_SERVERS=[{"name":"filesystem","type":"stdio","enabled":true,"command":"npx","args":["-y","@modelcontextprotocol/server-filesystem","/tmp"]},{"name":"github","type":"stdio","enabled":true,"command":"npx","args":["-y","@modelcontextprotocol/server-github"],"env":{"GITHUB_PERSONAL_ACCESS_TOKEN":"your_token"}}]

# Production Configuration (optional)
NEXT_PUBLIC_VERCEL_URL=your_production_domain

# Development Tools (optional)
ANALYZE=false
